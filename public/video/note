<!-- Slider buttons -->
const slider = ref(null);
const slideLeft = () => {
slider.value.scrollBy({ left: -260, behavior: "smooth" });
};
const slideRight = () => {
slider.value.scrollBy({ left: 260, behavior: "smooth" });
};


